<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- FrameLayout to hold EditText and microphone icon -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/messageField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Type a message"
                    android:background="@drawable/edit_text_styling"
                    android:paddingEnd="40dp" />

                <ImageView
                    android:id="@+id/microphoneIconChatFrag"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/baseline_mic_none_24"
                    android:contentDescription="Voice input" />
            </FrameLayout>

            <ImageButton
                android:id="@+id/sendButton"
                android:backgroundTint="#00FFFFFF"
                android:layout_width="60dp"

                android:layout_height="60dp"
                android:src="@drawable/send_message_icon"
                android:contentDescription="Send message" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
